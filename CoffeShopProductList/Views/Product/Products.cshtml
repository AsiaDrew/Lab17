@model List<Product>
@{
    ViewData["Title"] = "Menu";
}

<div class="text-center">
    <h1 class="display-4">Coffee Shop App</h1>
    <h2>Menu</h2>
</div>

@{
    foreach(Product p in Model)
    {
        <div class="text-center">
            
            <a asp-controller="Product" asp-action="Details" asp-route-productId="@p.Id"><h5>@p.Name</h5></a>
            <p>$@p.Price</p>
        </div>
    }
}